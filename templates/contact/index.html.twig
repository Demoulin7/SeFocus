{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css?family=Numans');

        html,body{
            background-color: gray;
            height: 100%;
            font-family: 'Numans', sans-serif;
        }

        .container{
            height: 100%;
            align-content: center;
        }

        .card{
            margin-top: auto;
            margin-bottom: auto;
            width: 400px;
            background-color: rgba(0,0,0,0.5) !important;
        }

        .social_icon span{
            font-size: 60px;
            margin-left: 10px;
            color: #FFC312;
        }

        .social_icon span:hover{
            color: white;
            cursor: pointer;
        }

        .card-header h3{
            color: white;
            display: flex;
            justify-content: center;
        }

        .input-group-prepend span{
            width: 38px;
            height: 100%;
            background-color: dodgerblue;
            color: black;
            border:0 !important;
        }

        input:focus{
            outline: 0 0 0 0  !important;
            box-shadow: 0 0 0 0 !important;

        }

        .remember input
        {
            width: 20px;
            height: 20px;
            margin-left: 15px;
            margin-right: 5px;
        }

        .links{
            color: white;
        }

        .links a{
            margin-left: 4px;
        }

        form button {
            margin-top: 15px;
        }

        form div {
            margin-top: 10px;
        }

    </style>

    <div class="d-flex justify-content-center h-100">
    </div>
{% endblock %}
