{% extends 'base.html.twig' %}

{% block title %}Se Connecter{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Se connecter</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes déjà connectés en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    {% endif %}
                    <div class="input-group form-group">

                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" autocomplete="email" required autofocus>
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>

                    </div>
                    <div class="input-group form-group">

                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Mot de passe" required>
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                    </div>
                    <div class="row align-items-center remember" style="flex-wrap: inherit;">
                        <input type="checkbox" name="_remember_me" checked><p style="margin-top: 1em!important; color:white">Se souvenir de moi</p>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Se connecter" class="btn float-right login_btn">
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center">
                    <a href="#">Mot de passe oublié</a>
                </div>
                <div class="d-flex justify-content-center links login-links">
                    <span>Pas de compte ?</span> <a href="/register">Créer un compte</a>
                </div>

            </div>
        </div>
    </div>


{% endblock %}
